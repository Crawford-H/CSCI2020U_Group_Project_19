<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>

<GridPane fx:controller="client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root">
    <stylesheets>
        <URL value="@Stylesheet.css"/>
    </stylesheets>
    <Label text="ROCK PAPER SCISSORS" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Canvas fx:id="canvas" GridPane.rowIndex="1" GridPane.columnIndex="0" height="500" width="700"/>
    <GridPane GridPane.columnIndex="0" alignment="center" GridPane.rowIndex="2" hgap="20">
        <Button text="Rock" onAction="#rockButton" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Paper" onAction="#paperButton" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="Scissors" onAction="#scissorsButton" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    </GridPane>
</GridPane>