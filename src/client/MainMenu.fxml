<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="client.Controller" fx:id="mainPane"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="New Game" onAction="#newGame" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="Join Game" onAction="#joinGame" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="Exit" onAction="#exit" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>